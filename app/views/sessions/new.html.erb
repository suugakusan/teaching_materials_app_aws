<div class="text-center">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
      <div class="bg-secondary p-sm-4 m-4 p-2 rounded">
        <div class="m-3">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control form-height', required: true %>
        </div>
        <div class="m-3">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control form-height', required: true %>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit 'ログイン', class: 'btn btn-primary w-75 mb-4' %>
      </div>
    <% end %>
    <div class="text-center mb-5">
      <h3>新規登録は<%= link_to 'こちら', signup_path %>から</h3>
    </div>
  </div>
</div>
